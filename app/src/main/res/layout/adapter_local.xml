<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/color_white">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            />
        <ImageView
            android:id="@+id/iv_icon_r"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_video_r"
            android:scaleType="centerCrop"
            android:alpha="0.8"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_marginLeft="5dp"
            android:text="0642318333.jpg"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignBottom="@+id/iv_icon"
            android:gravity="bottom"
            android:text="2017年11月29日"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_datetime"
            android:layout_alignBottom="@+id/iv_icon"
            android:gravity="bottom"
            android:text="3.3MB"
            android:textSize="12sp"/>

         <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_filesize"
            android:layout_alignBottom="@+id/iv_icon"
            android:gravity="bottom"
            android:text="未存证"
            android:textSize="12sp"/>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
</layout>
