<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/ripple_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/setting_item_background_press"/>
                </shape>

            </item>
            <item android:state_focused="true">
                <shape>
                    <solid android:color="@color/setting_item_background_press"/>
                </shape>

            </item>
            <item>
                <shape>
                    <solid android:color="@color/setting_item_background_default"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
